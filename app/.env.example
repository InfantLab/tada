# Tada Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=file:./data/db.sqlite

# Voice Feature (v0.3.0+)
# Enable voice input feature
VOICE_ENABLED=true

# Free tier monthly limit (default: 50)
VOICE_FREE_LIMIT=50

# Groq API Key (for LLM extraction in Premium tier)
# Get yours at https://console.groq.com/keys
GROQ_API_KEY=

# OpenAI API Key (optional, for BYOK or fallback)
OPENAI_API_KEY=

# Anthropic API Key (optional, for BYOK)
ANTHROPIC_API_KEY=

# Deepgram API Key (optional, for premium STT)
DEEPGRAM_API_KEY=
