# Tada Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=file:./data/db.sqlite

# ============================================
# Voice Feature (v0.3.0+)
# ============================================

# Enable voice input feature
VOICE_ENABLED=true

# Free tier monthly limit (default: 50)
VOICE_FREE_LIMIT=50

# ============================================
# LLM API Keys - Server-Side Configuration
# ============================================
# These are DEVELOPER/OPERATOR keys, NOT user keys.
# Users can add their own keys via Settings > Voice & AI (BYOK).
#
# How it works:
# 1. Server uses GROQ_API_KEY by default (fast, cheap Llama 3.3 70B)
# 2. If user adds BYOK in settings, their key is used instead
# 3. OPENAI/ANTHROPIC below are server-side fallbacks (optional)

# Groq API Key - PRIMARY (recommended)
# Fast, cheap, reliable. Get yours at https://console.groq.com/keys
GROQ_API_KEY=

# OpenAI API Key (optional server-side fallback)
OPENAI_API_KEY=

# Anthropic API Key (optional server-side fallback)
ANTHROPIC_API_KEY=

# Deepgram API Key (optional, for premium cloud STT)
DEEPGRAM_API_KEY=

# ============================================
# Cloud Mode (v0.4.0+) - tada.living
# ============================================
# Enable cloud mode features (email verification, usage limits, billing)
# Automatically enabled if Stripe keys are configured
TADA_CLOUD_MODE=false

# Require email verification (default: false for self-hosted)
TADA_REQUIRE_EMAIL_VERIFICATION=false

# Email verification grace period in days (default: 7)
TADA_VERIFICATION_GRACE_DAYS=7

# Free tier data retention in days (default: 365)
TADA_FREE_RETENTION_DAYS=365

# ============================================
# Stripe Billing (v0.4.0+)
# ============================================
# Required for cloud billing. Get keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_MONTHLY=
STRIPE_PRICE_ID_YEARLY=

# ============================================
# Email / SMTP (optional)
# ============================================
# Required for password reset and email verification
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false
SMTP_FROM=
APP_URL=http://localhost:3000
